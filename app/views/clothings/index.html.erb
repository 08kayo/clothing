<div class="contents row">
  <% @clothings.each do |clothing| %>
    <div class="content_post" style="background-image: url(<%= clothing.image %>);">
      <% if user_signed_in? && current_user.id == photo.user_id %>
        <div class="more">
          <span><%= image_tag 'arrow_top.png' %></span>
          <ul class="more_list">
            <li>
              <%= link_to '編集', "/clothings/#{photo.id}/edit", method: :get %>
            </li>

            <li>
              <%= link_to '削除', "/clothings/#{photo.id}", method: :delete %>
            </li>
          </ul>
        </div>
      <% end %>
        <%= simple_format(clothing.text) %>
      <span class="name">
        <a href="/users/<%= photo.user_id %>">
          <span>投稿者</span><%= photo.user.nickname %>
        </a>
      </span>
    </div>
  <% end %>
</div>